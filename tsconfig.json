{
  "compilerOptions": {
    "outDir": "./build",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": ["./src/server/*"],
  "exclude": ["./src/**/*tests.ts"],
  "files": ["./types.d.ts"]
}
